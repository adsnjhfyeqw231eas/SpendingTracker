<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('partials/head') %>
</head>

<body>

    <div class="mdl-grid">
        
        <%- include('partials/navbar') %>

        <!-- added to keep everything in center -->
        <div class="mdl-cell mdl-cell--3-col"></div>

        <div class="mdl-cell mdl-cell--6-col">
            <% if ("development" === process.env.NODE_ENV) { %>
            <h5 style="color: red">Development Mode</h5>
            <% } %>
            <h2>Charts</h2>
            <hr>

            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Month</h5>
                    <p class="card-text">Month vise total expense</p>
                </div>
                <% if ("development" != process.env.NODE_ENV) { %>
                    <iframe style="background: #FFFFFF;border: none;border-radius: 2px;box-shadow: 0 2px 10px 0 rgba(70, 76, 79, .2);" 
                        width="640" height="480" 
                        src="https://charts.mongodb.com/charts-project-0-zukok/embed/charts?id=6f3b4530-4f9f-4317-9f27-e1366f169555&autoRefresh=86400&theme=light">
                    </iframe>
                <% } else {%>
                    <h5 style="color: red">Cant see this coz Development mod</h5>
                <% } %>
            </div>

            <div class="mdl-cell mdl-cell--3-col"></div>

            <hr>

            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Catogery</h5>
                    <p class="card-text">Catogery vise total expense</p>
                </div>
                <% if ("development" != process.env.NODE_ENV) { %>
                    <iframe style="background: #FFFFFF;border: none;border-radius: 2px;box-shadow: 0 2px 10px 0 rgba(70, 76, 79, .2);" 
                        width="640" height="480" 
                        src="https://charts.mongodb.com/charts-project-0-zukok/embed/charts?id=28a21ed0-fbd1-4357-b54c-35bb39735871&autoRefresh=86400&theme=light">
                    </iframe>
                <% } else {%>
                    <h5 style="color: red">Cant see this coz Development mod</h5>
                <% } %>
            </div>
        </div>

    </div>

    <script defer src="script/script.js"></script>
</body>

</html>
